<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.biubiu.user.mapper.RoleMapper">

    <select id="findByUid" parameterType="java.lang.String" resultType="com.biubiu.user.po.Role">
        select r.* from t_role r
        where r.id in
            (
              select ur.role_id from t_user_role ur
              where ur.user_id = #{userId}
                    and ur.is_delete = 0
            )
    </select>

</mapper>