<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.biubiu.user.mapper.PermissionMapper">

    <select id="findByRids" parameterType="java.util.List" resultType="com.biubiu.user.po.Permission">
        select p.* from t_permission p
        where p.id in
        (
        select rp.permission_id from t_role_permission rp
        <where>
            <if test="list != null">
                rp.role_id in
                <foreach collection="list" item="rid" index="index" open="(" close=")" separator=",">
                    #{rid}
                </foreach>
            </if>
        </where>
        )
    </select>

</mapper>